<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/inputNameFragment">

    <fragment
        android:id="@+id/inputNameFragment"
        android:name="com.hieuminh.chessclient.views.fragments.inputname.InputNameFragment"
        android:label="fragment_input_name"
        tools:layout="@layout/fragment_input_name">
        <action
            android:id="@+id/action_inputNameFragment_to_gameModeFragment"
            app:destination="@id/gameModeFragment"
            app:enterAnim="@anim/slide_left"
            app:exitAnim="@anim/wait_anim"
            app:popEnterAnim="@anim/wait_anim"
            app:popExitAnim="@anim/slide_right" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.hieuminh.chessclient.views.fragments.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_playChessFragment"
            app:destination="@id/playChessFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
        <argument
            android:name="name"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/playChessFragment"
        android:name="com.hieuminh.chessclient.views.fragments.chess.PlayChessFragment"
        android:label="fragment_play_chess"
        tools:layout="@layout/fragment_play_chess">
        <argument
            android:name="room"
            app:argType="com.hieuminh.chessclient.models.Room" />
        <argument
            android:name="name"
            app:argType="string" />
        <argument
            android:name="createRoom"
            app:argType="boolean" />
    </fragment>
    <fragment
        android:id="@+id/gameModeFragment"
        android:name="com.hieuminh.chessclient.views.fragments.mode.GameModeFragment"
        android:label="fragment_game_mode"
        tools:layout="@layout/fragment_game_mode">
        <action
            android:id="@+id/action_gameModeFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/slide_left"
            app:exitAnim="@anim/wait_anim"
            app:popEnterAnim="@anim/wait_anim"
            app:popExitAnim="@anim/slide_right" />
        <argument
            android:name="name"
            app:argType="string" />
        <action
            android:id="@+id/action_gameModeFragment_to_ofllineChessFragment"
            app:destination="@id/ofllineChessFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/ofllineChessFragment"
        android:name="com.hieuminh.chessclient.views.fragments.chess.OfflineChessFragment"
        android:label="fragment_oflline_chess"
        tools:layout="@layout/fragment_play_chess" />
</navigation>
